<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.dawidperdek.myandroidapp1.AngielskaActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/tabela_ger"
            android:id="@+id/textView8" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/druzyna"
            android:id="@+id/textView7" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/mecze"
            android:id="@+id/textView5" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/punkty"
            android:id="@+id/textView6" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/druzyna1_ger"
            android:text="Bayern Monachium"
            android:editable="true"/>

        <EditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/m1_ger"
            android:layout_weight="1"
            android:text="27"
            android:editable="true"/>

        <EditText
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/pkt1_ger"
            android:layout_weight="1"
            android:text="69"
            android:editable="true"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/druzyna2_ger"
            android:text="Borussia Dortmund"
            android:editable="true"/>

        <EditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/m2_ger"
            android:layout_weight="1"
            android:text="26"
            android:editable="true"/>

        <EditText
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/pkt2_ger"
            android:layout_weight="1"
            android:text="61"
            android:editable="true"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/druzyna3_ger"
            android:text="Hertha Berlin"
            android:editable="true"/>

        <EditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/m3_ger"
            android:layout_weight="1"
            android:text="27"
            android:editable="true"/>

        <EditText
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/pkt3_ger"
            android:layout_weight="1"
            android:text="48"
            android:editable="true"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/druzyna4_ger"
            android:text="Schalke"
            android:editable="true"/>

        <EditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/m4_ger"
            android:layout_weight="1"
            android:text="27"
            android:editable="true"/>

        <EditText
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/pkt4_ger"
            android:layout_weight="1"
            android:text="44"
            android:editable="true"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/druzyna5_ger"
            android:text="Borussia M'gladbach"
            android:editable="true"/>

        <EditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/m5_ger"
            android:layout_weight="1"
            android:text="27"
            android:editable="true"/>

        <EditText
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/pkt5_ger"
            android:layout_weight="1"
            android:text="42"
            android:editable="true"/>
    </LinearLayout>

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:text="Niebieskie tło"
            android:id="@+id/tlo1_ger"
            android:onClick="onRadioButtonClicked"/>

        <RadioButton
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:text="Zielone tło"
            android:id="@+id/tlo2_ger"
            android:layout_gravity="right"
            android:onClick="onRadioButtonClicked"/>
    </RadioGroup>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:text="@string/podsumowanie"
            android:id="@+id/podsumowanie_ger"
            android:onClick="onPodsumowanie"/>

        <Button
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:text="@string/powrot"
            android:id="@+id/powrot_ger"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />
    </LinearLayout>

</LinearLayout>
