<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.dawidperdek.myandroidapp1.AngielskaActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/tabela_eng"
            android:id="@+id/textView8" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/druzyna"
            android:id="@+id/textView7" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/mecze"
            android:id="@+id/textView5" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/punkty"
            android:id="@+id/textView6" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/druzyna1_eng"
            android:text="Leicester"
            android:editable="true"/>

        <EditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/m1_eng"
            android:layout_weight="1"
            android:text="30"
            android:editable="true"/>

        <EditText
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/pkt1_eng"
            android:layout_weight="1"
            android:text="63"
            android:editable="true"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/druzyna2_eng"
            android:text="Tottenham Hotspur"
            android:editable="true"/>

        <EditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/m2_eng"
            android:layout_weight="1"
            android:text="30"
            android:editable="true"/>

        <EditText
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/pkt2_eng"
            android:layout_weight="1"
            android:text="58"
            android:editable="true"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/druzyna3_eng"
            android:text="Arsenal"
            android:editable="true"/>

        <EditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/m3_eng"
            android:layout_weight="1"
            android:text="30"
            android:editable="true"/>

        <EditText
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/pkt3_eng"
            android:layout_weight="1"
            android:text="55"
            android:editable="true"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/druzyna4_eng"
            android:text="Manchester City"
            android:editable="true"/>

        <EditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/m4_eng"
            android:layout_weight="1"
            android:text="29"
            android:editable="true"/>

        <EditText
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/pkt4_eng"
            android:layout_weight="1"
            android:text="51"
            android:editable="true"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/druzyna5_eng"
            android:text="West Ham United"
            android:editable="true"/>

        <EditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/m5_eng"
            android:layout_weight="1"
            android:text="29"
            android:editable="true"/>

        <EditText
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/pkt5_eng"
            android:layout_weight="1"
            android:text="49"
            android:editable="true"/>
    </LinearLayout>

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:text="Niebieskie tło"
            android:id="@+id/tlo1_eng"
            android:onClick="onRadioButtonClicked"/>

        <RadioButton
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:text="Czerwone tło"
            android:id="@+id/tlo2_eng"
            android:layout_gravity="right"
            android:onClick="onRadioButtonClicked"/>
    </RadioGroup>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:text="@string/podsumowanie"
        android:id="@+id/podsumowanie_eng"
        android:onClick="onPodsumowanie"/>

        <Button
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:text="@string/powrot"
            android:id="@+id/powrot_eng"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />
    </LinearLayout>

</LinearLayout>
