<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dawidperdek.farbiarnia.DodawanieFragment">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.dawidperdek.androidzadanie2.DodawanieFarbyActivity"
        android:layout_gravity="bottom">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:id="@+id/linearLayout5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nazwafarby"
                android:id="@+id/textView8"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_weight="0.05" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nazywanieFarby"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:editable="true"
                android:layout_weight="0.95" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:id="@+id/linearLayout6"
            android:layout_below="@+id/linearLayout5"
            android:layout_alignParentStart="true"
            android:layout_marginTop="59dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/wartoscR"
                android:id="@+id/textView12"
                android:layout_weight="0.1" />

            <SeekBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nowaFarbaR"
                android:layout_alignTop="@+id/textView9"
                android:layout_alignEnd="@+id/linearLayout5"
                android:layout_toEndOf="@+id/textView10"
                android:layout_weight="0.9"
                android:max="255" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/linearLayout6"
            android:layout_centerHorizontal="true"
            android:id="@+id/linearLayout7">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/wartoscG"
                android:id="@+id/textView10"
                android:layout_below="@+id/textView9"
                android:layout_alignParentStart="true"
                android:layout_weight="0.1" />

            <SeekBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nowaFarbaG"
                android:layout_alignBottom="@+id/textView10"
                android:layout_toEndOf="@+id/textView10"
                android:layout_alignRight="@+id/linearLayout5"
                android:layout_weight="0.9"
                android:max="255" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/linearLayout7"
            android:layout_centerHorizontal="true"
            android:id="@+id/linearLayout8">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/wartoscB"
                android:id="@+id/textView11"
                android:layout_below="@+id/textView10"
                android:layout_alignParentStart="true"
                android:layout_weight="0.1" />

            <SeekBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nowaFarbaB"
                android:layout_weight="0.9"
                android:max="255" />
        </LinearLayout>

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/nowaFarbaKolor"
            android:layout_below="@+id/linearLayout8"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="61dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dodaj"
            android:id="@+id/nowaFarbaDodaj"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:onClick="dodajNowaFarbe" />
    </RelativeLayout>


</FrameLayout>
